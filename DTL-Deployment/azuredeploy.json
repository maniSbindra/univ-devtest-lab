{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "labName": {
      "type": "string"
    },
    "templateRepositoryDisplayName": {
      "type": "string",
      "defaultValue": "University Template Repository"
    },
    "templateRepoUri": {
      "type": "string"
    },
    "templateRepoBranch": {
      "type": "string",
      "defaultValue": "master"
    },
    "armTemplateFolderPath": {
      "type": "string",
      "defaultValue": "Templates/"
    },
    "templateRepoType": {
      "type": "string",
      "allowedValues": [ "VsoGit", "GitHub" ]
    },
    "templateRepoSecurityToken": {
      "type": "securestring"
    }
  },
  "variables": {
    "labVirtualNetworkName": "[concat('Dtl', parameters('labName'))]",
    "artifactRepositoryName": "[concat('Repo-', uniqueString(subscription().subscriptionId))]"
  },
  "resources": [
    {
      "apiVersion": "2017-04-26-preview",
      "type": "Microsoft.DevTestLab/labs",
      "name": "[parameters('labName')]",
      "location": "[resourceGroup().location]",
      "resources": [
        {
          "apiVersion": "2017-04-26-preview",
          "name": "[variables('labVirtualNetworkName')]",
          "type": "virtualNetworks",
          "dependsOn": [
            "[resourceId('Microsoft.DevTestLab/labs', parameters('labName'))]"
          ]
        },
        {
          "apiVersion": "2017-04-26-preview",
          "name": "[variables('artifactRepositoryName')]",
          "type": "artifactSources",
          "dependsOn": [
            "[resourceId('Microsoft.DevTestLab/labs', parameters('labName'))]"
          ],
          "properties": {
            "uri": "[parameters('templateRepoUri')]",
            "armTemplateFolderPath": "[parameters('armTemplateFolderPath')]",
            "branchRef": "[parameters('templateRepoBranch')]",
            "displayName": "[parameters('templateRepositoryDisplayName')]",
            "securityToken": "[parameters('templateRepoSecurityToken')]",
            "sourceType": "[parameters('templateRepoType')]",
            "status": "Enabled"
          }
        }
      ]
    }
  ],
  "outputs": {
    "labId": {
      "type": "string",
      "value": "[resourceId('Microsoft.DevTestLab/labs', parameters('labName'))]"
    }
  }
}